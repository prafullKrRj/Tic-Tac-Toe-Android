<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C486B"
    tools:context=".GameWindow">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="about"
        app:layout_constraintBottom_toTopOf="@+id/player_directory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.682">

        <ImageView
            android:tag="4"
            android:id="@+id/imageView4"
            android:layout_width="@dimen/_174sdp"
            android:layout_height="wrap_content"
            android:onClick="clicked"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sq2"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView5"
            android:tag="5"
            android:onClick="clicked"
            android:layout_width="@dimen/_174sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sq2" />

        <ImageView
            android:id="@+id/imageView6"
            android:tag="6"
            android:onClick="clicked"
            android:layout_width="@dimen/_174sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sq2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/_174sdp"
            android:onClick="clicked"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_weight="1"
            android:tag="1"
            app:srcCompat="@drawable/sq2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_174sdp"
            android:onClick="clicked"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:tag="2"
            android:layout_weight="1"
            app:srcCompat="@drawable/sq2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_174sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_weight="1"
            android:contentDescription="player3"
            android:onClick="clicked"
            android:tag="3"
            app:srcCompat="@drawable/sq2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.872">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/_174sdp"
            android:onClick="clicked"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:tag="7"
            android:layout_weight="1"
            app:srcCompat="@drawable/sq2" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/_174sdp"
            android:layout_height="wrap_content"
            android:tag="8"
            android:onClick="clicked"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sq2" />

        <ImageView
            android:id="@+id/imageView9"
            android:onClick="clicked"
            android:tag="9"
            android:layout_width="@dimen/_174sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sq2" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_37sdp"
        android:gravity="center"
        android:text="Tic Tac Toe"
        android:textColor="@color/white"
        android:textSize="@dimen/_22ssp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginRight="@dimen/_100sdp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/x" />
    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_100sdp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/o" />

    <TextView
        android:id="@+id/turnIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_60sdp"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        app:layout_constraintVertical_bias="0.405" />

    <TextView
        android:id="@+id/player1Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player1"
        android:textSize="@dimen/_15ssp"
        android:layout_marginLeft="@dimen/_80sdp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <TextView
        android:id="@+id/player2Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player2"
        android:textSize="@dimen/_15ssp"
        android:layout_marginLeft="@dimen/_100sdp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="@+id/player1Game"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>